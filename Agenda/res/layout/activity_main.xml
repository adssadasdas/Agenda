<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.c.MainActivity" >

    <EditText
        android:id="@+id/tb1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp"
        android:ems="10"
        android:hint="@string/tb1"
        android:inputType="text" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/tb2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tb1"
        android:layout_below="@+id/tb1"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="@string/tb2"
        android:inputType="phone" />

    <EditText
        android:id="@+id/tb3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tb2"
        android:layout_below="@+id/tb2"
        android:layout_marginTop="19dp"
        android:ems="10"
        android:hint="@string/tb3"
        android:inputType="textEmailAddress" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="@dimen/pingu"
        android:layout_height="@dimen/pingu"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        android:src="@drawable/g5" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/tb3"
        android:layout_marginTop="14dp"
        android:text="@string/btnSalvar" />

</RelativeLayout>